@model Employee
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Employee</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" type="text" class="form-control" placeholder="Surname">
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input asp-for="Position" type="text" class="form-control" placeholder="Position">
                    <span class="text-danger" asp-validation-for="Position"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">ImageUrl</label>
                    <input asp-for="ImageUrl" type="text" class="form-control" placeholder="ImageUrl">
                    <span class="text-danger" asp-validation-for="ImageUrl"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Update</button>
                <button asp-area="Manage" asp-controller="Employee" asp-action="Index" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>